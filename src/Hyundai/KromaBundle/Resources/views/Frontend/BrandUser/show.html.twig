{% extends 'GeckoBackendBundle::layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block section_title %}
<h1>{{ brand.title }}</h1>
{% endblock %}

{% block breadcrums %}
<ol class="breadcrumb">
	<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
	<li>Products</li>
	<li class="active">{{ brand.title }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="box">
	<div class="box-header">
		<i class="fa fa-info"></i>
		<h3 class="box-title">Description</h3>
	</div>
	<div class="box-body">
		<p>{{ brand.description }}</p>
	</div>
</div>
{% for catName, resourcesCategory in resourcesCategories %}
<div class="box box-primary">
	<div class="box-header">
		<h3 class="box-title">{{ catName }}</h3>
	</div>
	<div class="box-body clearfix">
		{% for resource in resourcesCategory.resources %}
		<div class="box box-solid box-info" style="width: 340px; float: left; margin-right: 30px;">
			<div class="box-header">
				<h4 class="box-title">{{ resource.name }}</h4>				
			</div>
			<div class="box-body">
				<div>
					<a class="btn btn-app" style="margin: 0 auto; display: block;" href="{{ path('hyundai_kroma_branduser_files', {'brandresource_id': resource.id}) }}"><i class="fa fa-eye"></i> View {{ resource.files|length }} files</a>
				</div>
			</div>
    	</div>
   		{% endfor %}
	</div>
</div>
{% endfor %}
{% endblock %}