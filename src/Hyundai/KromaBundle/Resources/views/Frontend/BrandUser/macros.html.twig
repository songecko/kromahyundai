{% macro list(brands) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'GeckoBackendBundle:Macros:alerts.html.twig' as alerts %}
{% import 'GeckoBackendBundle:Macros:misc.html.twig' as misc %}

{% if brands|length > 0 %}
<div class="box">
	<div class="box-body table-responsive no-padding">
		<table class="table table-hover"><tbody>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Description</th>
				<th>Resources quantity</th>
				<th></th>
			</tr>
			{% for brand in brands %}
	        <tr>
				<td></td>
				<td>{{ brand.title }}</td>
				<td>{{ brand.description }}</td>
				<td>{{ brand.resources|length }}</td>
				<td>
					<div class="pull-right">
	                    {{ buttons.show(path('hyundai_kroma_branduser_show', {'id': brand.id})) }}
	                </div>
				</td>
			</tr>
	        {% endfor %}
		</tbody></table>
	</div>
</div>
{% else %}
{{ alerts.info('gecko.backend.no_results'|trans) }}
{% endif %}

{% endmacro %}