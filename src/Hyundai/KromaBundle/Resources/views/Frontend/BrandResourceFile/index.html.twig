{% extends 'GeckoBackendBundle::layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'GeckoBackendBundle:Macros:misc.html.twig' import pagination %}
{% from 'HyundaiKromaBundle:Frontend/BrandResourceFile:macros.html.twig' import list  %}

{% block section_title %}
<h1>Files</h1>
{% endblock %}

{% block breadcrums %}
<ol class="breadcrumb">
	<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
	<li class="active">Files</li>
</ol>
{% endblock %}

{% block content %}
<h2 class="page-header">
	<a href="#" class="btn btn-primary multipleUploadButton">
    	<i class="icon-plus-sign"></i><span>Multiple upload</span>
	</a>
	
	<div class="multipleUpload well">
		<!-- The fileinput-button span is used to style the file input field as button -->
	    <span class="btn btn-success fileinput-button">
	        <i class="glyphicon glyphicon-plus"></i>
	        <span>Select files...</span>
	        <!-- The file input field used as target for the file upload widget -->
	        <input id="fileupload" type="file" name="files[]" data-upload-url="{{ path('hyundai_kroma_brandresourcefile_multiple_create', {'brandresource_id': app.request.get('brandresource_id')}) }}" multiple>
	    </span>
	    <br>
	    <br>
	    <!-- The global progress bar -->
	    <div id="progress" class="progress">
	        <div class="progress-bar progress-bar-success"></div>
	    </div>
	    <!-- The container for the uploaded files -->
	    <div id="files" class="files"></div>
	</div>
</h2>

{{ list(brandresourcefiles)  }}
{{ pagination(brandresourcefiles) }}

{% endblock %}
