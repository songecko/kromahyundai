{% macro list(brandresourcecategories) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'GeckoBackendBundle:Macros:alerts.html.twig' as alerts %}
{% import 'GeckoBackendBundle:Macros:misc.html.twig' as misc %}

{% if brandresourcecategories|length > 0 %}
<div class="box">
	<div class="box-body table-responsive no-padding">
		<table class="table table-hover"><tbody>
			<tr>
				<th>Name</th>
				<th></th>
			</tr>
			{% for brandresourcecategory in brandresourcecategories %}
	        <tr>
				<td>{{ brandresourcecategory.name }}</td>
				<td>
					<div class="pull-right">
	                    {{ buttons.edit(path('hyundai_kroma_brandresourcecategory_update', {'id': brandresourcecategory.id})) }}
	                    {{ buttons.delete(path('hyundai_kroma_brandresourcecategory_delete', {'id': brandresourcecategory.id})) }}
	                </div>
				</td>
			</tr>
	        {% endfor %}
		</tbody></table>
	</div>
</div>
{% else %}
{{ alerts.info('gecko.backend.no_results'|trans) }}
{% endif %}

{% endmacro %}