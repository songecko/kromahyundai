{% extends 'GeckoBackendBundle::layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

{% block section_title %}
<h1>Recursos</h1>
{% endblock %}

{% block breadcrums %}
<ol class="breadcrumb">
	<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
	<li><a href="{{ path('hyundai_kroma_brandresource_index', {'brand_id': app.request.get('brand_id')}) }}">Recursos</a></li>
	<li class="active">Nuevo</li>
</ol>
{% endblock %}

{% block content %}
<div class="row">
	<div class="col-md-12">
		<div class="box">
			<form action="{{ path('hyundai_kroma_brandresource_create', {'brand_id': app.request.get('brand_id')}) }}" method="post" enctype="multipart/form-data">
				<div class="box-body">
					{{ form_errors(form) }}		
		    		{% include 'HyundaiKromaBundle:Frontend/BrandResource:_form.html.twig' %}
				</div>
				<div class="box-footer">
					{{ create() }}
				</div>
			</form>
		</div>
	</div>
</div>
{% endblock %}
