{% extends 'GeckoBackendBundle::layout.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import update %}

{% block topbar %}
<ol class="breadcrumb">
    <li><a href="{{ path('hyundai_kroma_backend_post_index') }}">{{ 'gecko.backend.breadcrumb.post.index'|trans }}</a></li>
    <li>{{ 'gecko.backend.breadcrumb.edit'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="icon-pencil"></i> {{ 'gecko.backend.post.update_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('hyundai_kroma_backend_post_update', {'id': post.id}) }}" method="post" class="form-horizontal" enctype="multipart/form-data" novalidate>
    <input type="hidden" name="_method" value="PUT">
    {% include 'HyundaiKromaBundle:Backend/Post:_form.html.twig' %}
    {{ update() }}
</form>
{% endblock %}
